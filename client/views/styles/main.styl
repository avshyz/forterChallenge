$toolbar-height = 64


md-toolbar
    height $toolbar-height

#chat-box
    overflow-y auto
    display flex
    box-sizing border-box
    min-width 100%

    height 95%
    flex 1 1 95%

    li
        list-style none
        #user-name
            padding-left 0

    .automatic-message
        color grey
        font-style italic

    .bot-message
        color crimson
        font-weight bold


#msg-input
    margin-bottom 0
    width 99%
